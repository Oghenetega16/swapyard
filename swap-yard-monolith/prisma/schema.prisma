datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model User {
  id            String          @id @default(cuid())
  firstname          String?
  lastname           String?
  username      String?         @unique
  email         String         @unique
  password     String?
  state        String?
  role          Role            @default(BUYER)
  phoneNumber  String?
  emailVerified DateTime?
  image         String?
  contract   Boolean @default(false)

  listings Listing[]
  receivedReviews Review[] @relation("SellerReviews")
  givenReviews Review[]   @relation("BuyerReviews")
  
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role{
  BUYER
  SELLER
}
 
 
model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}
 

model PasswordResetToken{
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}

model Listing{
  id String @id @default(cuid())
  name String
  price Float
  images String
  description String
  location String?
  state String?
  status  ProductStatus @default(AVAILABLE)
  condition ProductCondition 
  negotiable Boolean @default(false)

  sellerId String
  Seller User @relation(fields: [sellerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductStatus{
  SOLD
  AVAILABLE
}

enum ProductCondition{
  NEW
  FAIRLYNEW
  SECONDHAND
  FAIR
  GOOD
}

model Review{
  id String @id @default(cuid())

  rating Int
  comment String?
  buyerId String
  buyer User @relation("BuyerReviews", fields: [buyerId], references: [id])

  sellerId String
  seller User @relation("SellerReviews", fields: [sellerId], references: [id])

  createdAt DateTime @default(now())

  @@unique([buyerId, sellerId])

}


